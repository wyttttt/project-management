.lsq{
    width: 100%;
    height:50px;
    text-align: center;
    font-size: 20px;
    background-color: #4481ff;
    color:white;
    padding:20px;
  }
.lsq image{
    width:20px;
    height:20px;
}
.top{
    height:40px;
    text-align: center;
    color:white;
    position: relative;
    background-color: #5e77a8;
    padding:5px;
}
.top button{
    background-color: #4481ff;
    position: absolute;
    right:10px;
    top:0px;
    /* width:20px; */
}
.top image{
    color:white;
    width:20px;
    height:20px;
}
.div{
    margin:10px;
    padding:10px;
    border:1px grey solid;
}
.div image{
    width:70px;
    height:70px;  
}
.inf{
    position: relative;
    left:100px;
    bottom:60px;
}
.word{
    position: relative;
    bottom:30px;
    margin:10px;
}
.tab image{
    width:15px;
    height:15px;
}
.tab li{
    width:33%;
    display: inline-block;
    /* border:0.1px grey solid; */
}